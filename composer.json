{
    "name": "conversio/mail",
    "require": {
        "php": "^7.4 | ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "codeception/specify": "*"
    },
    "autoload": {
        "classmap": [
            "src/",
            "tests/"
        ],
        "psr-4": {
            "Conversio\\Mail\\": "src",
            "Conversio\\Mail\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-clover=coverage.xml"
        ]
    }
}
